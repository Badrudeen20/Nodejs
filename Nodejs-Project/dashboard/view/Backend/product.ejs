        <script src="https://cdn.datatables.net/buttons/3.0.0/js/dataTables.buttons.js"></script>
        <script src="https://cdn.datatables.net/2.0.0/js/dataTables.bootstrap5.js"></script>
        <script>
              $(document).ready( function () {
                    var pgno = 0;
                    let pageLength = 3
                    $('table.display').DataTable({
                          "processing" : true,
                          "serverSide" : true,
                          "lengthChange": false,
                          pageLength : pageLength,
           
                          ajax: function (data, callback, settings) {
                                var api = this.api();
                                var search = api.search() 
                                var pageInfo = api.page.info();
                                pgno = pageInfo.page+1;
                                $.ajax({
                                      url: "<%=url%>admin/products/list",
                                      method:"GET",
                                      data:{start:pgno, length:pageLength,search:search}
                                }).then ( function( json, textStatus, jqXHR ) {
                                      json["data"] = json["data"];
                                      callback(json);
                                });
                          },
  
                          columns: [
                          { data: "id" },
                          { data: "name" },
                          { data: "price" }, 
                          { data: "status" }, 
                          { data: "action" },   
                          ],
                          "drawCallback": function (settings) {
                              var api = this.api();
                              if (api.rows({ page: 'current' }).count() === 0) {
                                  $(api.table().body()).append('<tr><td colspan="5" class="text-center">No records available</td></tr>');
                              }
                          },
                         
                    })
                    
                   
          
              })
  
           
          </script>